<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:gravity="start"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Medium Text"
            android:id="@+id/titleTV"
            android:layout_gravity="left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Small Text"
            android:id="@+id/authorTV"
            android:layout_gravity="left" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/light"
                android:id="@+id/star1"
                android:src="@drawable/ic_grade_black_36dp"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/light"
                android:id="@+id/star2"
                android:src="@drawable/ic_grade_black_36dp"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/light"
                android:id="@+id/star3"
                android:src="@drawable/ic_grade_black_36dp"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/light"
                android:id="@+id/star4"
                android:src="@drawable/ic_grade_black_36dp"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/light"
                android:id="@+id/star5"
                android:src="@drawable/ic_grade_black_36dp"/>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/Button"
            android:id="@+id/playButton"
            android:src="@drawable/ic_play_arrow_white_36dp"

            android:layout_gravity="right"
            android:contentDescription="@string/play_button" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/Button"
            android:id="@+id/listenButton"
            android:src="@drawable/ic_music_note_white_36dp"
            android:layout_toEndOf="@id/playButton"
            android:contentDescription="@string/open_tab"
            android:layout_gravity="right" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/Button"
            android:id="@+id/deleteButton"
            android:src="@drawable/ic_delete_white_36dp"
            android:layout_below="@id/playButton"
            android:contentDescription="@string/open_tab"
            android:layout_gravity="right" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/Button"
            android:id="@+id/commentsButton"
            android:layout_toEndOf="@id/deleteButton"
            android:layout_below="@id/listenButton"
            android:src="@drawable/ic_comment_white_36dp"
            android:contentDescription="@string/open_comments"
            android:layout_gravity="right" />

    </RelativeLayout>

</LinearLayout>

